{{#partial "pagename"}}
    This is <cite>{{squad.squadName}}</cite>'s page!
{{/partial}}


{{#partial "content"}}

    <h1> <small> Team Details:</small> </h1>
    <a href="/squads/{{squad.id}}/update"> <button style="margin:10px;" class="btn btn-default"> Edit {{squad.squadName}} </button> </a>
    <br><hr>

    <p> Jersey's color: <div style="background-color:{{squad.jersey}}; margin:10px; width:50px; height:50px; border-radius:100%;"></div>  </p>
    <p> Game-play strategy: {{squad.strategy}}</p>

    <hr>
    {{#if players}}
<!--        Your team, {{squad.squadName}}, has players!-->
        <br>
        <a href="/squads/{{squad.id}}/players"> <button class="btn btn-default">View {{squad.squadName}} Players</button></a>
        <br>
        <a href="/squads"> <button class="btn btn-default" style="margin:8px;"> Back Home </button> </a>

        <br><hr>
        <cite style="font-weight:bolder;"> Your team cannot have more than 5 players! <small> You now have {{length}} player(s) </small></cite>
        <br>

        <a href="/squads/{{squad.id}}/players/new"><button class="btn btn-primary"> Add a new player </button> </a>
    {{else}}

        <cite style="font-weight:bolder;"> Your team has no players at the moment! </cite>
        <br>
        <br>
        <cite> <small> You cannot have more than 5 players here!</small></cite>
        <br>
        <br>
        <a href="/squads/{{squad.id}}/players/new"><button class="btn btn-primary"> Add a new player </button> </a>
    {{/if}}
{{/partial}}

{{#partial "footer"}}
    <br><br><br>
    <a href="/players/{{squad.id}}/delete"> <button style="margin:20px;" class="btn btn-danger"> Delete All Players</button> </a>
{{/partial}}

{{> layout.hbs}}