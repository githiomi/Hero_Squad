{{#partial "pagename"}}
    {{players.name}} Profile.
{{/partial}}

{{#partial "content"}}
    <div style="background-color:teal; margin:20px; width:50px; height:50px; border-radius:100%;"></div>
    <hr>
    <ul>

        <li><p> {{players.name}}'s age: {{players.age}}</p></li>
        <li><p> {{players.name}}'s position: {{players.position}}</p></li>
        <li><p> {{players.name}}'s dominant hand: {{players.dominantHand}}</p></li>
        <li><p> You have put the player in {{squad.name}}'s team. </p></li>

    </ul>
    <hr>
{{/partial}}

{{#partial "footer"}}
    <br>
    <a href="/players/{{players.id}}/delete"> <button style="margin:20px;" class="btn btn-danger">Delete Player</button> </a>
{{/partial}}

{{> layout.hbs}}