{{#partial "pagename"}}
    {{username}}, these are your teams!
{{/partial}}

{{#partial "content"}}
    {{#if squads}}
        {{#each squads}}
            <br><hr>
            <h3> <small> Here are your team's details: </small> </h3>
            <ol>
                <li>Team name: <span style="font-family:Monospace; text-decoration:underline; font-weight:bold;"> {{squadName}}</span> </li>
                <br>
                <button class="btn btn-danger"> View {{squadName}} details.</button>
            </ol>
            <br><hr>
            <small> <span style="font-weight:bolder">YOU CAN'T HAVE MORE THAN 3 TEAMS. As of now you have {{squadNumber}} teams!</span> </small>
                <br><br>

        {{/each}}
        <a href="/squads/new"> <button class="btn btn-warning"> Add a new team </button> </a>
    {{else}}
        <br><hr>
        <h3><cite> Sorry. You do not seem to have any teams yet? </cite></h3>
        <a href="/squads/new"> <button class="btn btn-warning"> Add a new team </button> </a>
    {{/if}}
{{/partial}}

{{>layout.hbs}}